{
  "name": "ocr-document-scanner",
  "version": "1.0.0",
  "description": "OCR Document Scanner with Local AI Processing",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.22.15",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.ocr.document-scanner",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "src/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python",
        "filter": ["**/*"]
      }
    ]
  }
} 